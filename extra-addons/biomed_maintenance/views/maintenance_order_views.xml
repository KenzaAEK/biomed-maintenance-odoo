<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_biomed_maintenance_order_form" model="ir.ui.view">
        <field name="name">biomed.maintenance.order.form</field>
        <field name="model">biomed.maintenance.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_start" string="D√©marrer" type="object" class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_done" string="Cl√¥turer" type="object" class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" string="Annuler" type="object" invisible="state in ('done', 'cancelled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet>
                    <!-- ========== ALERTE RISQUE BIOLOGIQUE ========== -->
                    <div class="alert alert-danger" role="alert" invisible="not bio_hazard">
                        <strong>‚ö†Ô∏è RISQUE BIOLOGIQUE</strong> : EPI Requis (Gants, Masque FFP2)
                    </div>
                    
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    
                    <!-- ========== SECTION CLIENT &amp; √âQUIPEMENT ========== -->
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="sale_order_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="lot_id"/>
                            <field name="product_id"/>
                        </group>
                    </group>
                    
                    <!-- ========== SECTION DIAGNOSTIC IA ========== -->
                    <group>
                        <group string="Diagnostic">
                            <field name="description" placeholder="D√©crivez les sympt√¥mes observ√©s..."/>
                            <field name="priority" widget="priority"/>
                            <field name="bio_hazard"/>
                            
                            <!-- ========== NOUVEAU : CAT√âGORIE ML ========== -->
                            <field name="category" widget="badge" 
                                   invisible="not category"
                                   decoration-info="category == 'Electronique'"
                                   decoration-success="category == 'Optique'"
                                   decoration-warning="category == 'Software'"
                                   decoration-danger="category == 'Hydraulique'"/>
                        </group>
                        
                        <group string="Planification">
                            <field name="technician_id" widget="many2one_avatar_user"/>
                            <field name="date_scheduled"/>
                            <field name="duration" widget="float_time"/>
                        </group>
                    </group>
                    
                    <!-- ========== LOG ANALYSE IA ========== -->
                    <group invisible="not ai_analysis_log">
                        <group>
                            <field name="ai_analysis_log" readonly="1" widget="text"/>
                        </group>
                    </group>
                    
                    <!-- ========== D√âTAILS INTERVENTION ========== -->
                    <notebook>
                        <page string="Rapport d'Intervention">
                            <field name="intervention_report" 
                                   placeholder="D√©tails de l'intervention effectu√©e..."/>
                        </page>
                        <page string="Pi√®ces D√©tach√©es">
                            <field name="part_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="note" placeholder="Notes..."/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- ========== CHATTER (TRA√áABILIT√â) ========== -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ========== VUE LISTE ========== -->
    <record id="view_biomed_maintenance_order_tree" model="ir.ui.view">
        <field name="name">biomed.maintenance.order.tree</field>
        <field name="model">biomed.maintenance.order</field>
        <field name="arch" type="xml">
            <tree decoration-danger="priority == '3'" 
                  decoration-warning="bio_hazard == True">
                <field name="name"/>
                <field name="date_scheduled"/>
                <field name="partner_id"/>
                <field name="priority" widget="priority"/>
                <field name="bio_hazard" optional="show"/>
                
                <!-- ========== NOUVEAU : CAT√âGORIE ML ========== -->
                <field name="category" optional="show" 
                       decoration-info="category == 'Electronique'"
                       decoration-success="category == 'Optique'"
                       decoration-warning="category == 'Software'"
                       decoration-danger="category == 'Hydraulique'"/>
                
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>

    <!-- ========== VUE KANBAN ========== -->
    <record id="view_biomed_maintenance_order_kanban" model="ir.ui.view">
        <field name="name">biomed.maintenance.order.kanban</field>
        <field name="model">biomed.maintenance.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="priority"/>
                <field name="bio_hazard"/>
                <field name="category"/>
                <field name="state"/>
                <field name="product_id"/>
                <field name="date_scheduled"/>
                <field name="technician_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_body">
                                    <field name="partner_id"/>
                                    <br/>
                                    <field name="product_id"/>
                                    
                                    <!-- ========== BADGES ========== -->
                                    <div class="mt-2">
                                        <span t-if="record.bio_hazard.raw_value" 
                                              class="badge badge-danger">‚ò£Ô∏è BIO</span>
                                        
                                        <span t-if="record.category.raw_value == 'Electronique'" 
                                              class="badge badge-info">‚ö° √âlectronique</span>
                                        <span t-if="record.category.raw_value == 'Optique'" 
                                              class="badge badge-success">üîç Optique</span>
                                        <span t-if="record.category.raw_value == 'Software'" 
                                              class="badge badge-warning">üíª Logiciel</span>
                                        <span t-if="record.category.raw_value == 'Hydraulique'" 
                                              class="badge badge-danger">üíß Hydraulique</span>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="date_scheduled" widget="date"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="technician_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ========== ACTION PRINCIPALE ========== -->
    <record id="action_biomed_maintenance_order" model="ir.actions.act_window">
        <field name="name">Ordres de Maintenance</field>
        <field name="res_model">biomed.maintenance.order</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un premier ordre de maintenance
            </p>
            <p>
                Le syst√®me analysera automatiquement la description avec IA pour d√©tecter :
            </p>
            <ul>
                <li>üî• Les urgences critiques (fum√©e, incendie)</li>
                <li>‚ò£Ô∏è Les risques biologiques (sang, virus)</li>
                <li>ü§ñ La cat√©gorie technique (√âlectronique, Optique, Software, Hydraulique)</li>
            </ul>
        </field>
    </record>
</odoo>