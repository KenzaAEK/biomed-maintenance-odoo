<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_biomed_maintenance_order_form" model="ir.ui.view">
        <field name="name">biomed.maintenance.order.form</field>
        <field name="model">biomed.maintenance.order</field>
        <field name="arch" type="xml">
            <form string="Ordre de Maintenance">
                <header>
                    <button name="action_confirm" string="Confirmer" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    
                    <button name="action_start" string="Démarrer" type="object" 
                            class="oe_highlight" invisible="state != 'confirmed'"/>
                    
                    <button name="action_done" string="Clôturer" type="object" 
                            class="oe_highlight" invisible="state != 'in_progress'"/>
                    
                    <button name="action_cancel" string="Annuler" type="object" 
                            invisible="state in ('done', 'cancelled')"/>
                    
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                
                <sheet>
                    <div class="alert alert-danger" role="alert" 
                         invisible="not bio_hazard">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-exclamation-triangle fa-2x mr-3"/>
                            <div>
                                <strong>⚠️ ALERTE RISQUE BIOLOGIQUE DÉTECTÉ</strong><br/>
                                Équipement EPI requis : Gants, masque FFP2, blouse jetable
                            </div>
                        </div>
                    </div>

                    <field name="ai_analysis_log" readonly="1" 
                           invisible="not ai_analysis_log"
                           class="alert alert-warning"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Informations Client">
                            <field name="partner_id" widget="res_partner_many2one" 
                                   context="{'show_address': 1}" options="{'always_reload': True}"/>
                            <field name="sale_order_id" readonly="1"/>
                        </group>
                        
                        <group string="Équipement Concerné">
                            <field name="lot_id" options="{'no_create': True}"/>
                            <field name="product_id"/>
                        </group>
                    </group>

                    <group>
                        <group string="Diagnostic">
                            <field name="description" placeholder="Décrivez la panne (ex: Fumée, Bruit, Erreur E04)..."/>
                            <field name="priority" widget="priority"/>
                            <field name="bio_hazard"/>
                        </group>
                        
                        <group string="Planification">
                            <field name="technician_id" widget="many2one_avatar_user"/>
                            <field name="date_scheduled"/>
                            <field name="duration" widget="float_time"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Rapport d'Intervention">
                            <field name="intervention_report" placeholder="Détails techniques de la réparation effectuée..."/>
                        </page>
                        <page string="Pièces Consommées">
                            <field name="part_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="note"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_biomed_maintenance_order_tree" model="ir.ui.view">
        <field name="name">biomed.maintenance.order.tree</field>
        <field name="model">biomed.maintenance.order</field>
        <field name="arch" type="xml">
            <tree string="Ordres de Maintenance" 
                  decoration-danger="priority == '3'" 
                  decoration-warning="bio_hazard == True"
                  sample="1">
                <field name="name"/>
                <field name="date_scheduled" widget="remaining_days"/>
                <field name="partner_id"/>
                <field name="lot_id"/>
                <field name="product_id" optional="hide"/>
                <field name="priority" widget="priority"/>
                <field name="bio_hazard" optional="show"/>
                <field name="technician_id" widget="many2one_avatar_user"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-warning="state == 'in_progress'" 
                       decoration-success="state == 'done'"/>
            </tree>
        </field>
    </record>

    <record id="view_biomed_maintenance_order_kanban" model="ir.ui.view">
        <field name="name">biomed.maintenance.order.kanban</field>
        <field name="model">biomed.maintenance.order</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="priority"/>
                <field name="bio_hazard"/>
                <field name="technician_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                <div class="text-muted o_kanban_record_subtitle">
                                    <field name="partner_id"/>
                                </div>
                                <div class="mt-2">
                                    <field name="lot_id"/>
                                </div>
                                <div class="o_kanban_record_bottom mt-3">
                                    <div class="oe_kanban_bottom_left">
                                        <span t-if="record.bio_hazard.raw_value" 
                                              class="badge text-bg-danger">
                                            ☣️ BIO
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="technician_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_biomed_maintenance_order" model="ir.actions.act_window">
        <field name="name">Ordres de Maintenance</field>
        <field name="res_model">biomed.maintenance.order</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun ordre de maintenance trouvé
            </p>
            <p>
                Créez une nouvelle intervention. L'IA analysera automatiquement la description.
            </p>
        </field>
    </record>

    </odoo>